select * from Employees
select * from Departments

select FirstName, LastName,DepartmentName from Employees e
inner join Departments d
on e.DepartmentID = d.DepartmentID

select FirstName, LastName,DepartmentName from Departments d
left join Employees e
on d.DepartmentID = e.DepartmentID 

select FirstName, LastName,DepartmentName from Employees e
left join Departments d
on e.DepartmentID = d.DepartmentID
where e.DepartmentID is null




select a.FirstName, a.LastName,a.DepartmentID from Employees a
join Employees b
on a.DepartmentID = b.DepartmentID
where b.FirstName  = 'Jane' and b.LastName = 'Doe'


select top 1 DepartmentName,sum(salary) [Total Salary]from Departments d
inner join Employees e
on d.DepartmentID = e.DepartmentID
group by DepartmentName
order by [Total Salary] DESC




select * from Employees
select * from Departments
